{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./compiled/public/js",
    "noImplicitAny": true,
    "allowJs": true,
    "moduleResolution": "node",
    "lib": ["dom", "es2015"]
  },
  "include": ["src/frontend/ts/**/*.ts", "src/shared/**/*.ts"]
}
